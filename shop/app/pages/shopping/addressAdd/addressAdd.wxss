/* pages/shopping/addressAdd/addressAdd.wxss */
page {
  background-color: #f9f9f9;
}

/* 模态框 */

.modal {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 3;
}

.modal-bg {
  position: absolute;
  height: 100%;
  width: 100%;
  background-color: #3e3e3e;
  opacity: 0.8;
}

.modal-container {
  position: absolute;
  width: 80%;
  height: auto;
  top:4%;
  left: 10%;
  background-color: #fff;
  border-radius: 8rpx;
}

.modal-container>view{
  padding: 20rpx;
  border-bottom: 1rpx solid #f4f4f4;
}

.region{
  margin: 20rpx 0;
}

.modal-container>view>textarea{
  width: 100%;
  height: 100rpx;
}

.modal-container>button{
  margin: 20rpx;
  color: red;
  border: 1rpx solid red;
  background-color: #fff;
  font-size: 28rpx;
}

.modal-title{
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-container>image{
  width:60rpx;
  height:60rpx;
  position: absolute;
  top:-20rpx;
  right: -20rpx;
  border-radius: 50%;
}

.addressList:first-child {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 1rpx;
}

.addressList {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}

.addressInfo {
  border-bottom: 1rpx solid #f4f4f4;
  padding: 20rpx 0;
}

.addressInfo>view {
  width: 70%;
}

.addressEdit {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.active{
  color: red;
}

.addressEdit>view>image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.addressEdit>view:last-child>text:first-child {
  margin-right: 30rpx;
  color: green;
}

.addressEdit>view:last-child>text:last-child {
  color: red;
}

.addbtn {
  position: absolute;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  justify-content: space-around;
}

.addbtn button {
  width: 42%;
  font-size: 26rpx;
  background-color: #fff;
}

.addbtn button:first-child {
  border: 1rpx solid red;
  color: red;
}

.addbtn button:last-child {
  border: 1rpx solid green;
  color: green;
}
