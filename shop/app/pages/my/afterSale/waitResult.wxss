/* pages/my/afterSale/waitResult.wxss */

page {
  background-color: #f9f9f9;
}

.resultDesc {
  background-color: red;
  padding: 50rpx;
  line-height: 1.6;
}

.resultDesc>view>text {
  color: #fff;
}

.resultDesc>view:first-child>text {
  font-size: 36rpx;
}

.resultDesc>view:last-child>text {
  font-size: 28rpx;
}

.feedback {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.a {
  margin-left: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #dadada;
}

.b {
  margin: 20rpx 20rpx 20rpx -20rpx;
  line-height: 1.3;
  color: #9a9b94;
}

.li {
  margin-bottom: 10rpx;
}

.c {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.c>button {
  margin: 20rpx;
  font-size: 26rpx;
  padding: 0 16rpx;
  line-height: 2.4;
  background-color: #fff;
}

.c>button:last-child {
  border: 1rpx solid #ab2b2b;
  color: #ab2b2b;
}

.list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.list>image {
  width: 50rpx;
  height: 50rpx;
}

.goods-Info {
  background-color: #fff;
}

.goods-Info>view {
  padding: 20rpx;
}

.goods {
  background-color: #f4f4f4;
  display: flex;
  flex-direction: row;
}

.goods>image {
  width: 100rpx;
  height: 100rpx;
  background-color: #f4f4f4;
  margin-right: 20rpx;
}

.goods-Info>view>view {
  line-height: 1.6;
  color: #9a9b94;
}
