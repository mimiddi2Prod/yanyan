/* pages/my/review.wxss */

.container {
  padding: 5%;
  background-color: #fff
}

textarea {
  background-color: #fff;
  width: 96%;
  font-size: 28rpx;
  padding: 2%;
  min-height: 300rpx;
  border:1rpx solid #a3a3a3;
  border-radius: 12rpx;
}

button {
  width: 100%;
  background-color: #434343;
  color: #f1fffa;
  /* margin-top: 6%; */
}

.goodsInfo {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.goodsInfo>view {
  padding: 0 0 0 20rpx;
}

.goodsInfo>view:first-child {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx 20rpx 0;
  margin-left: 20rpx;
  /* border-bottom: 1rpx solid #DADADA; */
}

/* .goodsInfo>view:last-child {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
} */

.goodsInfo .goods-img {
  margin-right: 20rpx;
  background-color: #f3f3f3;
  width: 140rpx;
  height: 140rpx;
  padding: 20rpx;
}

.goodsInfo .goods-name {
  width: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goodsInfo .goods-name>view>view:first-child {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.goodsInfo .goods-name>text {
  font-size: 24rpx;
  color: #a2a2a2;
}

/* 上传图片框 */

.loadImg {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 40rpx;
}

.img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.loadImg>view:first-child {
  margin-bottom: 20rpx;
}

.border {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-right: 20rpx;
}

.abs {
  display: inline-block;
  background: #9a9a9a;
  top: 50%;
  left: 50%;
  position: absolute;
}

.img-c {
  margin-left: -2rpx;
  margin-top: -16rpx;
  height: 32rpx;
  width: 4rpx;
}

.img-r {
  margin-left: -16rpx;
  margin-top: -2rpx;
  height: 4rpx;
  width: 32rpx;
}
