/* pages/my/order/order.wxss */

page {
  background: #f9f9f9;
}

.container {
  position: fixed;
  top:0;
  background-color: #fff;
  /* min-height: 100%; */
  /* height: auto; */
  width: 100%;
  display: flex;
  flex-direction: column;
  z-index: 3;
}

.catalog {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  border-top: 1px solid #fafafa;
}

.catalog .nav {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.catalog .nav .item {
  flex: 1;
  text-align: center;
  line-height: 90rpx;
  height: 90rpx;
  color: #333;
  font-size: 28rpx;
  border-bottom: 6rpx solid #fff;
}

.catalog .nav .item.active {
  color: #ab2b2b;
  /* border-bottom: 6rpx solid #ab2b2b; */
}

.catalog .cate {
  border-bottom: 1px solid #fafafa;
  flex: 1;
  height: 100%;
  padding: 0 30rpx 0 30rpx;
}

.weui-navbar__slider {
  /* position: absolute; */
  display: block;
  content: " ";
  left: 0;
  /* bottom: 0; */
  width: 15%;
  height: 3px;
  background-color: #ab2b2b;
  /* background-color: @weuiNavBarColor; */
  transition: transform 0.3s;
}

.container-list {
  background-color: #f4f4f4;
  /* min-height: 100%; */
  height: auto;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 96rpx;
  z-index: 2;
  position: relative;
}

.list {
  margin: 10rpx 0 0 0;
  background-color: #fff;
  padding: 20rpx;
}

.number {
  border-bottom: 4rpx solid #f4f4f4;
  padding: 0 0 20rpx 0;
}

.goods {
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 4rpx solid #f4f4f4;
}

.goods .goods-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.goods .goods-info view{
  display: flex;
  flex-direction: column;
}

.goods .status{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.goods .goods-info>image {
  width: 100rpx;
  height: 100rpx;
  /* background-color: #f4f4f4; */
  margin-right: 20rpx;
  padding: 4rpx;
}

.settlement{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.settlement>view:last-child{
  display: flex;
  flex-direction: row;
}

.settlement button{
  font-size: 29rpx;
  /* width: 200rpx; */
  margin-left: 4rpx;
  /* background-color: #fff; */
  /* border: 1rpx solid #f4f4f4; */
  padding: 0 20rpx;
  line-height: 2;
  background: #F5BF4C;
color: #000;
border: 1rpx solid #000;

}

.settlement .btn:last-child>button{
  /* color: #8F4E56; */
  /* color:#fff; */
  /* border: 1rpx solid #434343;
  background-color:#434343;  */
  background: #F5BF4C;
  color: #000;
  border: 1rpx solid #000;
}

.settlement navigator:last-child>button{
  /* color: #8F4E56; */
  /* color:#fff; */
  border: 1rpx solid #000;
  /* background-color:#434343;  */
  background: #F5BF4C;
  color: #000;
}

.norList{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40%;
}

.norList>image{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 50rpx;
}

/* 支付方式 */
.dialog-login{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5); 
  display: flex;
  justify-content: center;
  align-items: center;
  z-index:11
}


.dialog-login .dialog-body{
  width: 540rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  border-radius: 5px;
  padding: 40rpx;
}

.dialog-login .dialog-body .title{
  width: 100%;
  text-align: center;
  line-height: 60rpx;
}

.dialog-login .dialog-body .content{
  width: 100%;
}

.dialog-login .dialog-body button{
  margin-top: 30rpx;
}