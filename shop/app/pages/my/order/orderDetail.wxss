/* pages/my/order/orderDetail.wxss */

page {
  background-color: #f9f9f9;
}

.address {
  background-color: #fdfdeb;
  padding: 20rpx 20rpx 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.address>view {
  margin: 10rpx 0;
  color: #413e33;
}

.address>text {
  font-size: 26rpx;
  color: #9a9b94;
}

.address>view>text:first-child {
  margin-right: 60rpx;
}

.goodsInfo {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.goodsInfo>view {
  padding: 0 20rpx;
  width: 710rpx;
}

.goodsInfo>view:first-child {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx 20rpx 0;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #dadada;
  width: 710rpx;
}

.goodsInfo>view:first-child>text:last-child {
  color: #a5404e;
}

/* .goodsInfo>view:last-child {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
} */

.goodsInfo .goods-img {
  margin-right: 20rpx;
  /* background-color: #f3f3f3; */
  width: 140rpx;
  height: 140rpx;
  padding: 6rpx;
}

.goodsInfo .goods-name {
  width: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goodsInfo .goods-name>view>view:first-child {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.aftersale{
  font-size: 26rpx;
  /* width: 200rpx; */
  /* margin-left: 4rpx; */
  background-color: #fff;
  border: 1rpx solid #f4f4f4;
  padding: 0 20rpx;
  line-height: 2;
}

.goodsInfo .goods-name>text {
  font-size: 24rpx;
  color: #a2a2a2;
}

.goodsInfo .del-line {
  display: inline-block;
  margin-left: 20rpx;
}

.goodsInfo .del-line>view {
  border-top: 1rpx solid #939393;
  transform: translateY(22rpx);
}

.goodsInfo .del-line>text {
  color: #939393;
}

.number {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  line-height: 1.6;
  display: flex;
  flex-direction: row;
}

.number>view {
  display: flex;
  flex-direction: column;
}

.number>view:first-child {
  width: 22%;
}

.number>view:first-child>text {
  color: #7c7c7c;
  font-size: 28rpx;
}

.number>view:last-child>text {
  font-size: 28rpx;
}

.payStyle {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  width: 730rpx;
}

.payStyle .number:first-child {
  border-bottom: 1rpx solid #dadada;
  padding: 0 0 20rpx 0;
  margin-bottom: 0;
}

.payStyle .number:last-child {
  padding: 20rpx 0;
}

.payStyle .number:last-child>view>text {
  color: #a5404e;
}

.info{
  display: flex;
  flex-direction: row;
  align-items: center
}

/* 支付方式 */
.dialog-login{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5); 
  display: flex;
  justify-content: center;
  align-items: center;
  z-index:11
}


.dialog-login .dialog-body{
  width: 540rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  border-radius: 5px;
  padding: 40rpx;
}

.dialog-login .dialog-body .title{
  width: 100%;
  text-align: center;
  line-height: 60rpx;
}

.dialog-login .dialog-body .content{
  width: 100%;
}

.dialog-login .dialog-body button{
  margin-top: 30rpx;
}

.pay{
  position: absolute;
  width: 60%;
  margin-left: 20%
}

/* 模态框 */

.modal {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 3;
}

.modal-bg {
  position: absolute;
  height: 100%;
  width: 100%;
  background-color: #3e3e3e;
  opacity: 0.8;
}

.modal-container {
  position: absolute;
