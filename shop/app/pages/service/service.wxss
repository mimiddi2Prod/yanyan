page{
  background-color: #F9F9F9;
}

.profile-info {
  /* width: 100%; */
  /* height: 200rpx; */
  height: 300rpx;
  display: flex;
  flex-direction: row;
  /* flex-wrap: wrap; */
  align-items: center;
  /* justify-content: flex-start; */
  padding: 0 20rpx;
  /* background: #fff; */
  /* background: #434343; */
  background-color: #E4DDC0;
  /* margin-bottom: 20rpx; */
}

.profile-info>button{
  text-align: left;
  width: 100%;
  border: none
}

.profile-info>view{
  text-align: left;
  width: 100%;
  border: none;
  padding: 0 28rpx;
}

.avatar {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.avatar text {
  /* color: #000; */
  color: #fff
}

.mid{
  background-color: #fff;
  margin: 0 0 20rpx 0;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.mid>navigator{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mid>navigator>image{
  width: 60rpx;
  height: 60rpx;
}

.mid>view{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mid>view>image{
  width: 60rpx;
  height: 60rpx;
}

.item-view{
  padding:0 20rpx;
  background-color: white;
}

.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
}

.item-name{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-name image{
  width:40rpx;
  height:40rpx;
  margin-right: 10rpx
}

.item-name text{
  font-size: 30rpx;
}

.item-go{
  width: 50rpx;
  height: 50rpx;
}
