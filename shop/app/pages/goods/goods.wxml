  <view class="l l-cart">
    <view class="box">
      <text class="cart-count">{{cartGoodsCount}}</text>
      <image bindtap="openCartPage" class="icon" src="../../images/shop-nor.png"></image>
    </view>
  </view>
  <!-- <view class="c" bindtap="toSettlement">立即购买</view> -->
